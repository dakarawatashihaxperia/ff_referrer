{
    "manifest_version": 2,
    "name": "Referrer Switcher",
    "version": "0.0.1",
    "author": "tatsupra",
    "applications": {
        "gecko": {
            "id": "referrerswitcher@fukachan.com"
        }
    },
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "icons/icon.svg"
    }
}
